<h2 id="signup-title">Sign-Up</h2>
<form class="form signup-form">
  <div class="form-group">
    <label class="label" for="name-signup">Name:</label>
    <input class="form-input" type="text" id="name-signup" placeholder="enter name"/>
  </div>
  <div class="form-group">
    <label class="label" for="email-signup">Email:</label>
    <input class="form-input" type="text" id="email-signup" placeholder="email"/>
  </div>
  <div class="form-group">
    <label class="label" for="password-signup">Password:</label>
    <input class="form-input" type="password" id="password-signup" placeholder="********"/>
  </div>
  <div class="form-group">
    <button class="button" id="signupBtn" type="submit">Sign-Up</button>
  </div>
</form>


<script src="js/signup.js"></script>