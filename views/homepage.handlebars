<div>
    <h1>Showing all locations for {{userCity}}</h1>
</div>
<div class="location-list">
    {{#each locations as |location|}}

    <div id="locationCard">
        <a href="/api/locations/{{location.id}}">
            <h1 id="locationName">{{location.location_name}}</h1>
            <h2 id="cityName">{{location.city}}</h2>
            <p id="locationDescription">{{location.description}}</p>
        </a>
    </div>

    {{/each}}
</div>

<script src='/js/homepage.js'></script>