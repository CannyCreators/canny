<h2 id="loginTitle">Login</h2>

<form class="form login-form">
  <div class="form-group">
    <label class="label" for="email-login">Email:</label>
    <input class="form-input" type="text" id="email-login"  placeholder="email"/>
  </div>
  <div class="form-group">
    <label class="label" id="passwordLabel" for="password-login">Password:</label>
    <input class="form-input" type="password" id="password-login"  placeholder="*********"/>
  </div>
  <div class="form-group">
    <button class="button" id="loginBtn" type="submit">login</button>
  </div>
</form>

<script src="/js/login.js"></script>
